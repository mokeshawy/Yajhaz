<resources>
    <!-- Base application theme. -->
    <style name="Theme.Yajhaz" parent="Theme.Material3.DayNight.NoActionBar">


        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="android:windowBackground">@color/white</item>

    </style>


    <style name="Widget.MaterialComponents.Button.Yajhaz">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_44sdp</item>
        <item name="cornerRadius">@dimen/_13sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
    </style>


    <!-- custom dialog theme -->
    <style name="CustomDialogTheme">
        <item name="windowMinWidthMajor">0dp</item>
        <item name="windowMinWidthMinor">0dp</item>
        <item name="android:windowMinWidthMajor">0dp</item>
        <item name="android:windowMinWidthMinor">0dp</item>
    </style>


    <style name="YajhazSmallCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Yajhaz
        </item>
    </style>


    <style name="ShapeAppearanceOverlay.MaterialCardView.Yajhaz" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/_34sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_34sdp</item>
    </style>


    <style name="textFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_38sdp</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:textColor">@color/dimGray</item>
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="ShapeAppearanceOverlay.Gallery" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_7sdp</item>
    </style>
</resources>